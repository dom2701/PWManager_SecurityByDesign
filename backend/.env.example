# Server Configuration
PORT=8080
ENV=development
GIN_MODE=debug

# Database
DATABASE_URL=postgres://pwmanager_user:secure_password@postgres:5432/pwmanager?sslmode=disable

# Redis
REDIS_URL=redis://redis:6379/0

# Security
SESSION_SECRET=change_me_to_random_64_char_hex_string_for_session_signing
MASTER_ENCRYPTION_KEY=change_me_to_random_32_byte_hex_for_mfa_encryption

# Session Configuration
SESSION_MAX_AGE=3600
SESSION_IDLE_TIMEOUT=1800

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# TLS Configuration (Production only)
# TLS_ENABLED=false
# TLS_CERT_PATH=/path/to/cert.pem
# TLS_KEY_PATH=/path/to/key.pem

# Argon2id Parameters
ARGON2_MEMORY=65536
ARGON2_ITERATIONS=3
ARGON2_PARALLELISM=4
ARGON2_SALT_LENGTH=16
ARGON2_KEY_LENGTH=32

# Logging
LOG_LEVEL=debug